<% layout('layouts/boilerplate') %>

<body>
  <div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3 class="mb-0">All Listings</h3>
      <!-- <a href="/listings/new" class="btn btn-primary">Create New Listing</a> -->
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
      <% for (let listing of allListings) { %>
        <div class="col">
          <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
            <div class="card h-100 shadow-sm">
              <img src="<%= listing.image %>" class="card-img-top" alt="Listing Image" style="width: 100%; height: 200px; object-fit: cover;">
              <div class="card-body">
                <p class="card-text mb-0">
                  <strong><%= listing.title %></strong><br>
                  &#8377; <%= listing.price ? listing.price.toLocaleString('en-IN') : 'N/A' %>/night

                </p>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  </div>
</body>
